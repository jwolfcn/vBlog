extends layout
block content
  h2 #{post.title}
  if user && user.name == post.name
    p
      a.glyphicon-pencil(href="/edit/#{post.name}/#{post.time.day}/#{post.title}") Edit
      a.glyphicon-remove-sign(href="/remove/#{post.name}/#{post.time.day}/#{post.title}" style="margin-left:10px;") Remove
  p.text-muted
    | 作者:
    a(href="/u/#{post.name}") #{post.name}
    | 日期: #{post.time.minute}
    |Tag:
    each tag,i in post.tags
      if tag
        a.tag(href="/tags/#{tag}") #{tag}
  div !{post.post}
  br
  br
  div.line
  h3.text-info
    |Comment:
  div.commentPanel
    include comments
