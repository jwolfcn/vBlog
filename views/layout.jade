doctype html
html
  head
    title= title
    include ./includes/header
  body
    nav.nav
      ul
        if !user
          li
            a(title='注册' href="/register")
              |Register
          li
            a(title='登录' href="/login")
              |Login

        else
          li
            a(title='Logout' href="/logout")
              |Logout
          li
            a(title='Post an article' href="/post")
              |Post
          li
            a(title='Post an article' href="/upload")
              |Upload
        li
          a(title='标签' href="/tags")
            |Tags
        li
          a(title='存档' href="/archive")
            |Archive
        li
          a(title='主页' href="/")
            |Home

    article
      if !success
        div #{error}
      else
        div #{success}
    div.mainContent
      block content
