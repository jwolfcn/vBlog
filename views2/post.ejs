<script type="text/javascript" >
    $(document).ready(function(){
        $("#postBtn").click(function() {
            var data = {
                title:$("#title").val(),
                tag1:$("#tag1").val(),
                tag2:$("#tag2").val(),
                tag3:$("#tag3").val(),
                post:$("#post").val()
            }
            $.post("/post",data,function(result){
                if(result.code){
                    $(".alertText").text(result.message);
                    $("#errorTip").show();
                    setTimeout(function(){
                        location.href = result.redirect;
                    },1000)
                }else{
                    $(".alertText").text(result.message);
                    $("#errorTip").show();
                }
            });
        });

    });

</script>
